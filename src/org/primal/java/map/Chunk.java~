package org.primal.java.map;
import org.primal.java.SimObject;
import org.primal.java.tile.Tile;


public class Chunk extends SimObject {
    
    protected Tile[][] subPieces;
    public int size = 16;
    public Chunk(float x, float y){
        super(x,y);
        subPeaces = new Tile[size][size];
        for(int i = 0; i < size; i++){
            for(int j = 0; j < size; j++){
                subPieces[i][j] = newSubPiece((float) i, (float) j);
            }
        }
    }

    protected Tile newSubPiece(float x, float y){
        return new LandTile(x,y);
    }
    
}
